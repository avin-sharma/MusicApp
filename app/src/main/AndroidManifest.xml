<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avinsharma.musicapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:configChanges="screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NowPlayingActivity"
            android:label="@string/category_now_playing"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".RecentlyPlayedActivity"
            android:label="@string/category_recent"/>
        <activity android:name=".TopListsActivity"
            android:label="@string/category_top_lists"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".LibraryActivity"
            android:label="@string/category_library"
            android:configChanges="screenSize|orientation"/>
    </application>

</manifest>